##############################################################################
# This is for Siteground to be placed at the public_html level eg
# /home/customer/www/b.grandadevans.com/public_html/laravel/public
##############################################################################
RewriteEngine on
RewriteCond %{HTTP_HOST} ^b.grandadevans.com$ [NC,OR]
RewriteCond %{HTTP_HOST} ^www.b.grandadevans.com$
RewriteCond %{REQUEST_URI} !laravel/public/
RewriteRule (.*) /laravel/public/$1
